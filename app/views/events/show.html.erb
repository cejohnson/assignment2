<h1><%= @event.title %></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Starts at:</b>
  <%= @event.starts_at %>
</p>

<p>
  <b>Ends at:</b>
  <%= @event.ends_at %>
</p>

<p>
  <b>Children:</b>
  <%= @event.children %>
</p>

<p>
  <b>Responsibility:</b>
  <%= @event.parents %>
</p>

<p>
  <b>Location:</b>
  <%= @event.location %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>


<%= link_to 'Edit', edit_event_path(@event), :class => "btn btn-blue"%> |
<%= link_to 'Delete', @event, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-red" %> |
<%= link_to 'Back', events_path, :class => "btn btn-creme" %>
